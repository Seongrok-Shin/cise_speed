{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "./src",
  "testEnvironment": "node",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@dto/(.*)$": "<rootDir>/dto/$1",
    "^@articleService/(.*)$": "<rootDir>/service/$1",
    "^@articleController/(.*)$": "<rootDir>/controller/$1",
    "^@articleInterface/(.*)$": "<rootDir>/interface/$1",
    "^@articleSchema/(.*)$": "<rootDir>/schema/$1"
  }
}